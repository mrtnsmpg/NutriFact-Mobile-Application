<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txtNutrifact"
            android:layout_width="350dp"
            android:layout_marginTop="40dp"
            android:layout_marginStart="30dp"
            android:layout_height="wrap_content"
            android:text="Nutrifact"
            android:fontFamily="@font/barlow_bold"
            android:textColor="@color/green"
            android:textSize="24dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/slide1"
            android:layout_width="350dp"
            android:layout_height="150dp"
            android:layout_marginStart="15dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10sp"
            app:cardBackgroundColor="@color/green"
            android:layout_marginEnd="20dp"
            app:cardCornerRadius="12dp"
            android:layout_marginBottom="30dp"/>

        <TextView
            android:id="@+id/txtCategories"
            android:layout_width="350dp"
            android:layout_marginStart="30dp"
            android:layout_height="wrap_content"
            android:text="Categories"
            android:fontFamily="@font/barlow_semibold"
            android:textSize="16dp"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_marginStart="30dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:id="@+id/cat1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10sp"
                app:cardBackgroundColor="@color/lightgray"
                android:layout_marginEnd="35dp"
                app:cardCornerRadius="26dp"
                />
            <androidx.cardview.widget.CardView
                android:id="@+id/cat2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10sp"
                app:cardBackgroundColor="@color/lightgray"
                android:layout_marginEnd="35dp"
                app:cardCornerRadius="26dp"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/cat3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10sp"
                app:cardBackgroundColor="@color/lightgray"
                android:layout_marginEnd="15dp"
                app:cardCornerRadius="26dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/txtActions"
            android:layout_width="350dp"
            android:layout_marginStart="30dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/barlow_semibold"
            android:textSize="16dp"
            android:text="Actions" />

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_cam"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10sp"
                app:cardBackgroundColor="@color/red"
                android:layout_marginEnd="15dp"
                app:cardCornerRadius="12dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    tools:srcCompat="@drawable/camera_icon"></ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:fontFamily="@font/barlow_semibold"
                        android:textSize="16dp"
                        android:text="Camera"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_history"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10sp"
                app:cardBackgroundColor="@color/red"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        tools:srcCompat="@drawable/history_icon"></ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:fontFamily="@font/barlow_semibold"
                        android:textSize="16dp"
                        android:text="History"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_favorite"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10sp"
                app:cardBackgroundColor="@color/red"
                android:layout_marginEnd="15dp"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        tools:srcCompat="@drawable/favorite_icon"></ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:fontFamily="@font/barlow_semibold"
                        android:textSize="16dp"
                        android:text="Favorite"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_Daily"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10sp"
                app:cardBackgroundColor="@color/red"
                app:cardCornerRadius="12dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        tools:srcCompat="@drawable/daily_icon"></ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:fontFamily="@font/barlow_semibold"
                        android:textSize="16dp"
                        android:text="Daily"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>